<!DOCTYPE html>
<html>
<head>
	<title>{{ title }}</title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel='stylesheet' href='/stylesheets/types.css' />
	<script type="text/javascript" src="/js/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="/js/responsiveVoice/responsiveVoice.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.6/Chart.bundle.js"></script>
	<script type="text/javascript" src="/js/scripts/pokedexList.js"></script>
	<script type="text/javascript" src="/js/scripts/function.js"></script>
	<script type="text/javascript" src="/js/scripts/scripts.js"></script>
	<script type="text/javascript">
	var responsePokemon = {{& pokemonResponseString }};
	var responsePokemonSpecies = {{& pokemonSpeciesDataString }};
	</script>

</head>
<body>
	<header>
		<nav>
			<!-- SideNav -->
			<div id="mySidenav" class="sidenav">
				<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
				<a href="#">Pokedex</a>
				<a href="#">Itemdex</a>
				<a href="#">Locationdex</a>
			</div>
			<!-- SideNav -->
			<div id="topBar">
				<span id="navButton" onclick="openNav()">&#9776;</span>
				<img class="icon" src="/images/interface/icon-search.png" onclick="showSearch()"/>&nbsp;
				<span id="dexId">Dex No : {{ pokemonResponse.id }} / </span>
				<span id="dexName" onclick="useList()">{{ pokemonResponse.name }}</span>
				<button id="dexter" class="buttonDexter">&#9658;</button>
			</div>
		</nav>
	</header>
	<!-- Hidden -->
	<select id="pokedexList" name="pokemon" class ="" onchange="changePokemon(this.value)">
	</select>
	<!-- Hidden -->
	<div id="searchContainer" class="hidden">
		<input id="pokemonSearchBox" onchange="changePokemon(this.value)">
	</div>
	<div class="container">		
		<div class="pokemon">

			<div class="image">
				<a id="pokemonNavPreviousLink"><img id="pokemonNavPreviousImage" class="pokemonNav" /></a>
				<img src="/images/dex/pokemon-large/{{ pokemonResponse.id }}.png" />
				<a id="pokemonNavNextLink"><img id="pokemonNavNextImage" class="pokemonNav" /></a>
			</div>
			<!-- Loop through type object -->
			<!-- http://stackoverflow.com/questions/17283776/iterate-through-json-array-with-mustache -->
			<div class="row">
				<div class="reverseOrder">
					{{#pokemonResponse.types}}
					{{#.}}
					<div class="type {{type.name}}">{{type.name}}</div>
					{{/.}}
					{{/pokemonResponse.types}}
				</div>
			</div>
			<!-- Section: Abilities -->
			<div id="abilitiesSection" >
				<div id="abilitiesTitle" class="title">
					<span>Abilities</span>
					<button id="abilitiesController" class="buttonController" onclick="showSection('abilitiesContent')">+</button>
				</div>
				<div id="abilitiesContent" class="hidden">
					<div class="reverseOrder">
						{{#pokemonResponse.abilities}}
						{{#.}}
						<div class='ability hidden{{is_hidden}}'>{{ability.name}}</div>
						{{/.}}
						{{/pokemonResponse.abilities}}
					</div>
				</div>
			</div>
			<!-- Section: Evolution Chain -->
			<div id="evolutionChainSection" >
				<div id="evolutionChainTitle" class="title">
					<span>Evolution Chain</span>
					<button id="evolutionChainController" class="buttonController" onclick="showSection('evolutionChainContent')">+</button>
				</div>
				<div id="evolutionChainContent" class="hidden">
					<!-- content goes here -->
				</div>
			</div>

			<!-- Section: Moves -->
			<div id="movesSection" >
				<div id="movesTitle" class="title">
					<span>Moves</span>
					<button id="movesController" class="buttonController" onclick="showSection('movesContent')">+</button>
				</div>
				<div id="movesContent" class="hidden">
					<!-- content goes here -->
				</div>
			</div>

			<!-- Section: Breeding -->
			<div id="breedingSection" >
				<div id="breedingTitle" class="title">
					<span>Breeding</span>
					<button id="breedingController" class="buttonController" onclick="showSection('breedingContent')">+</button>
				</div>
				<div id="breedingContent" class="hidden">
					<!-- content goes here -->
				</div>
			</div>

			<!-- Section: Locations -->
			<div id="locationSection" >
				<div id="locationTitle" class="title">
					<span>Locations</span>
					<button id="locationController" class="buttonController" onclick="showSection('locationContent')">+</button>
				</div>
				<div id="locationContent" class="hidden">
					<!-- content goes here -->
				</div>
			</div>

			<!-- Section: Base Stats -->
			<div id="baseStatsSection" >
				<div id="baseStatsTitle" class="title">
					<span>Stats</span>
					<button id="baseStatsController" class="buttonController" onclick="showSection('baseStatsContent')">+</button>
				</div>
				<!-- <button id="#chartButton" onclick="buildChart(barChartData)"> -->
				<div id="baseStatsContent" class="hidden">
					Nature: 
					<select>
						<option value="hardy">Hardy</option>
						<option value="lonely">Lonely</option>
						<option value="brave">Brave</option>
					</select>
					<canvas id="canvas"></canvas>
				</div>
			</div>
			<div id="massive">
			</div>
			<!-- sample section below -->
			<div id="sectionSection" >
				<div id="sectionTitle" class="title">
					<span>Section Title</span>
					<button id="sectionController" class="buttonController" onclick="showSection('sectionContent')">+</button>
				</div>
				<div id="sectionContent" class="hidden">
					<!-- content goes here -->
				</div>
			</div>
			<!-- sample section above -->
		</div>
	</div>
</body>
</html>
