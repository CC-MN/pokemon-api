<!DOCTYPE html>
<html>
<head>
	<title>{{ title }}</title>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel='stylesheet' href='/stylesheets/types.css' />
	<link rel="shortcut icon" href="/images/app/favicon.ico" type="image/x-icon" />
	<link rel="apple-touch-icon" href="/images/app/ios-icon.png">
	<!-- <meta name="apple-mobile-web-app-capable" content="yes"> -->
	<script type="text/javascript" src="/js/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="/js/responsiveVoice/responsiveVoice.js"></script>
	<script type="text/javascript" src="/js/chartjs/chartbundle.js"></script>
	<script type="text/javascript" src="/js/scripts/pokedexList.js"></script>
	<script type="text/javascript" src="/js/scripts/function.js"></script>
	<script type="text/javascript" src="/js/scripts/scripts.js"></script>
	<script type="text/javascript">
	var responsePokemon = {{& pokemonResponseString }};
	var responsePokemonSpecies = {{& pokemonSpeciesDataString }};
	var responsePokemonNames = {{& allPokemonNamesString}};
	</script>

</head>
<body>
	<header>
		<nav>
			<!-- SideNav -->
			<div id="mySidenav" class="sidenav">
				<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
				<a href="#">Pokedex</a>
				<a href="#">Itemdex</a>
				<a href="#">Locationdex</a>
			</div>
			<!-- SideNav -->
			<div id="topBar">
				<span id="navButton" onclick="openNav()">&#9776;</span>
				<img class="icon" src="/images/interface/icon-search.png" onclick="showSearch()"/>&nbsp;
				<span id="dexId">Dex No : {{ pokemonResponse.id }} / </span>
				<span id="dexName" onclick="useList()">{{ pokemonResponse.name }}</span>
				<button id="dexter" class="buttonDexter">&#9658;</button>
			</div>
		</nav>
	</header>
	<!-- Hidden -->
	<select id="pokedexList" name="pokemon" class ="" onchange="changePokemon(this.value)">
	</select>
	<!-- Hidden -->
	<div id="searchContainer" class="hidden">
		<input id="pokemonSearchBox" onchange="changePokemon(this.value)">
	</div>
	<div class="container">		
		<div class="pokemon">

			<div class="image">
				<a id="pokemonNavPreviousLink"><img id="pokemonNavPreviousImage" class="pokemonNav" /></a>
				<img src="/images/dex/pokemon-large/{{ pokemonResponse.id }}.png" />
				<a id="pokemonNavNextLink"><img id="pokemonNavNextImage" class="pokemonNav" /></a>
			</div>
			<!-- Loop through type object -->
			<!-- http://stackoverflow.com/questions/17283776/iterate-through-json-array-with-mustache -->
			<div class="row">
				<div class="reverseOrder">
					{{#pokemonResponse.types}}
					{{#.}}
					<div class="type {{type.name}}">{{type.name}}</div>
					{{/.}}
					{{/pokemonResponse.types}}
				</div>
			</div>
			<!-- Section: Abilities -->
			<section>
				<div id="abilitiesTitle" class="tab abilitiesContent">
					<span>Abilities</span>
					<div class="iconContainer">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="abilitiesContent" class="hidden">
					<div class="reverseOrder">
						{{#pokemonResponse.abilities}}
						{{#.}}
						<div class='ability hidden{{is_hidden}}'>{{ability.name}}</div>
						{{/.}}
						{{/pokemonResponse.abilities}}
					</div>
				</div>
			</section>
			<!-- Section: Evolution Chain -->
			<section>
				<div id="evolutionChainTitle" class="tab evolutionChainContent request">
					<span>Evolution Chain</span>
					<div class="iconContainer">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="evolutionChainContent" class="hidden">
					<!-- content goes here -->
				</div>
			</section>

			<!-- Section: Moves -->
			<section>
				<div id="movesTitle" class="tab movesContent request">
					<span>Moves</span>
					<div class="iconContainer">
						<img src="/images/interface/icon-filter.png" id="movesContentFilter" class="sectionIcon hidden">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="movesContent" class="hidden">
					<!-- content goes here -->
				</div>
			</section>

			<!-- Section: Breeding -->
			<section>
				<div id="breedingTitle" class="tab breedingContent">
					<span>Breeding</span>
					<div class="iconContainer">
						<img src="/images/interface/icon-filter.png" id="breedingContentFilter" class="sectionIcon hidden">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="breedingContent" class="hidden">
					<!-- content goes here -->
					Gender:
					<div id="genderContainer" class="row">
						<div id="genderChart">
							<div id="genderChartFemale"></div>
							<div id="genderChartMale"></div>
						</div>
					</div>
					Egg Groups:
					<div></div>
					Egg Hatching:
					<div id="eggInfo" class="row">
						<img src="/images/page-pokemon/breeding-egg.png" />
						Flamebody <img src="/images/page-pokemon/breeding-flamebody.png" height="21px" id="flamebody" />
						O-Power <input type="range" name="opower" id="opower" min="0" max="5" value="0">
						<br />
						<span id="totalSteps"></span>
					</div>
				</div>
			</section>

			<!-- Section: Locations -->
			<section>
				<div id="locationTitle" class="tab locationContent request">
					<span>Locations</span>
					<div class="iconContainer">
						<img src="/images/interface/icon-filter.png" id="locationContentFilter" class="sectionIcon hidden">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="locationContent" class="hidden">
					<!-- content goes here -->
				</div>
			</section>

			<!-- Section: Base Stats -->
			<section>
				<div id="baseStatsTitle" class="tab baseStatsContent">
					<span>Stats</span>
					<div class="iconContainer">
						<img src="/images/interface/icon-configure.png" id="baseStatsContentConfigure" class="sectionIcon hidden">
						<img src="/images/interface/icon-filter.png" id="baseStatsContentFilter" class="sectionIcon hidden">
						<button class="buttonController">+</button>
					</div>
				</div>
				<!-- <button id="#chartButton" onclick="buildChart(barChartData)"> -->
				<div id="baseStatsContent" class="hidden">
					Nature: 
					<select>
						<option value="hardy">Hardy</option>
						<option value="lonely">Lonely</option>
						<option value="brave">Brave</option>
					</select>
					<canvas id="canvas"></canvas>
				</div>
			</section>
			<!-- sample section below -->
			<section>
				<div id="sectionTitle" class="tab sectionContent">
					<span>Section Title</span>
					<div class="iconContainer">
						<img src="/images/interface/icon-configure.png" class="sectionIcon hidden">
						<img src="/images/interface/icon-filter.png" class="sectionIcon hidden">
						<button class="buttonController">+</button>
					</div>
				</div>
				<div id="sectionContent" class="hidden">
					<!-- content goes here -->
					<div class="iconContainer">
						<img src="/images/interface/icon-configure.png" class="hidden">
						<img src="/images/interface/icon-filter.png" class="hidden">
						<img src="/images/interface/icon-plus.png" class="hidden">
						<!-- <span class="buttonController">+</span> -->
						<!-- <button>+</button> -->
					</div>
				</div>
			</div>
			<!-- sample section above -->
		</section>
	</div>
</body>
</html>
